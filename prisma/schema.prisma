// Kategori Kontak
model KategoriKontak {
  id   Int    @id @default(autoincrement())
  nama String
}

// Kategori Produk
model KategoriProduk {
  id     Int      @id @default(autoincrement())
  nama   String
  jumlah Int
  Produk Produk[]
}

// Kontak Table
model Kontak {
  id Int @id @default(autoincrement())
  nama_panggilan String
  gelar             String
  nama              String
  nomor_hp          String
  tipe_identitas    String
  nomor_identitas   String
  email             String
  info_lain         String
  nama_perusahaan   String
  nomor_telepon     String
  nomor_fax         String
  nomor_npwp        String
  alamat_pembayaran String
  alamat_pengiriman String
  nama_bank          String
  kantor_cabang_bank String
  pemegang_akun_bank String
  nomor_rekening     String
  piutang            Akun @relation("akunPiutang", fields: [akun_piutang], references: [id])
  akun_piutang       Int
  hutang             Akun @relation("akunHutang", fields: [akun_hutang], references: [id])
  akun_hutang        Int
  syarat_pembayaran_utama String
  Penjualan               Penjualan[]
  Pembelian               Pembelian[]
}

// Produk table
model Produk {
  id                Int     @default(autoincrement()) @id 
  nama              String
  image             String
  kode_sku          String
  kategori_akun     KategoriProduk @relation(fields: [kategoriId], references: [id])
  kategoriId        Int
  
  unit              Int
  deskripsi         String
  
  harga_beli_satuan Int
  pembelian         Akun @relation("akunPembelian", fields: [akun_pembelian], references: [id])
  akun_pembelian    Int
  pajak_beli        String

  harga_jual_satuan Int
  penjualan         Akun @relation("akunPenjualan", fields:[akun_penjualan], references: [id])
  akun_penjualan    Int
  pajak_jual        String

  Penjualandetail         Penjualandetail[]
  Pembeliandetail       Pembeliandetail[]
}

// Pajak Table
model Pajak {
  id              Int         @id @default(autoincrement())
  nama            String
  presentasaAktif Int
  kategori1       Akun        @relation("akunPenjual", fields: [akunPenjual], references: [id])
  akunPenjual     Int
  kategori2       Akun        @relation("akunPembeli", fields: [akunPembeli], references: [id])
  akunPembeli     Int
  penjualandetail       Penjualandetail[]
  Pembeliandetail       Pembeliandetail[]
}

model Penjualan {
  id               Int      @id @default(autoincrement())
  id_kontak        Kontak   @relation(fields:[kontakID], references: [id])
  kontakID         Int
  namapelanggan    String
  email            String
  alamatpenagihan  String
  tgltransaksi     String
  tgljatuhtempo    String 
  syaratpembayaran String
  no_ref_penagihan Int
  notransaksi      Int @unique
  tag              String
  uangmuka         Int
  sisa_tagihan     Int
  pesan            String
  memo             String
  fileattachment   String
  diskontambahan   String
  pemotongan       String
  total            Int
  Penjualandetail   Penjualandetail[]
  }

  model Penjualandetail{
  id               Int      @id @default(autoincrement())
  id_penjualan     Penjualan@relation(fields: [penjualanID], references:[notransaksi])
  penjualanID      Int       
  id_produk        Produk   @relation(fields:[produkID], references: [id])
  produkID         Int
  nama_produk      String
  desk_produk      String
  kuantitas        Int
  satuan           String
  harga_satuan     Int
  diskon           Int
  diskonperbaris   Int
  pajakperbaris    Int
  id_pajak         Pajak    @relation(fields:[pajakID], references: [id])
  pajakID          Int
  pajak            Int
  jumlah           Int
  
  }

  model Pembelian {
  id               Int      @id @default(autoincrement())
  id_kontak        Kontak   @relation(fields:[kontakID], references: [id])
  kontakID         Int
  namasupplier     String
  email            String
  alamatsupplier   String
  tgltransaksi     String
  tgljatuhtempo    String 
  syaratpembayaran String
  no_ref_supplier  Int
  notransaksi      Int @unique
  tag              String
  uangmuka         Int
  sisa_tagihan     Int
  pesan            String
  memo             String
  fileattachment   String
  diskontambahan   String
  pemotongan       String
  total            Int
  Pembeliandetail   Pembeliandetail[]
  }

  model Pembeliandetail{
  id               Int      @id @default(autoincrement())
  id_pembelian     Pembelian@relation(fields: [pembelianID], references:[notransaksi])
  pembelianID      Int       
  id_produk        Produk   @relation(fields:[produkID], references: [id])
  produkID         Int
  nama_produk      String
  desk_produk      String
  kuantitas        Int
  satuan           String
  harga_satuan     Int
  diskon           Int
  diskonperbaris   Int
  pajakperbaris    Int
  id_pajak         Pajak    @relation(fields:[pajakID], references: [id])
  pajakID          Int
  pajak            Int
  jumlah           Int
  }